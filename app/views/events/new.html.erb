<div class="event-new">
    <div class="event-new-title">
        <h1>イベント情報の作成</h1>
    </div>
    <div class="event-new-main">
        <%= form_for @event do |e| %>
          <%= e.hidden_field :user_id, require: true, :value => current_user.id %>
          <p>－イベント名－</p>
          <span>※必須</span><br>
          <%= e.text_field :title, :class => "event-title" %>
          <p>－イメージ写真－</p>
          <span>※必須</span><br>
          <%= e.file_field :image, :class => "event-image" %>
          <p>－場所－</p>
          <span>※必須</span><br>
          <%= e.text_field :place, :class => "event-place" %>
          <p>－開催日－</p>
          <span>※必須</span><br>
          <%= e.date_field :day, :class => "event-day" %>
          <p>－開始時間－</p>
          <span>※必須</span><br>
          <%= e.time_field :starttime, :class => "event-starttime" %>
          <p>－終了時間－</p>
          <span>※必須</span><br>
          <%= e.time_field :endtime, :class => "event-endtime" %>
          <ul class="event-check-box">
              <li>－掲載の有無－</li>
              <span>※掲載する場合はチェックを入れてください。</span><br>
              <li><%= label_tag :release, "掲載する" %></li>
              <li><%= e.check_box :release, {}, "1", "0" %></li>
          </ul>
          <div class="event-new-btn-area">
              <ul>
                  <li><%= e.submit "作成する", :class => "event-new-btn", data: {confirm: "作成してもよろしいですか？"} %></li>
                  <li><%= link_to "一覧へ戻る", "/events" %></li>
              </ul>
          </div>
        <% end %>
    </div>
</div>